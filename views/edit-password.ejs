<%- include('include/header') %>
<div class="row justify-content-center">
  <div class="col-lg-10 col-md-12">
    <div class="wrapper">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="contact-wrap">
            <h3 class="mb-4 text-center">Edit Password</h3>
            <form
              method="POST"
              action="<%= `/updatepassword/${password.id}` %>"
              id="contactForm"
              name="contactForm"
              class="contactForm"
            >
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      name="website"
                      id="website"
                      value="<%= password.website %>"
                      placeholder="Website"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <input
                      type="email"
                      class="form-control"
                      name="email"
                      id="email"
                      value="<%= password.email %>"
                      placeholder="Email/Username"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <input
                      type="password"
                      class="form-control"
                      name="password"
                      id="password"
                      value="<%= password.password %>"
                      placeholder="Password"
                    />
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <input
                      type="submit"
                      value="Update Password"
                      class="btn btn-primary"
                    />
                  </div>
                </div>
              </div>
            </form>
            <div class="form-group text-center">
              <button type="button" onclick="list()" class="btn btn-primary">
                View Password
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('include/footer') %>
